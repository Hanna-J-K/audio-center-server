// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Track {
  id     String @id @default(uuid())
  title  String
  artist String
  album  String
  url    String
}

model Broadcast {
  id        String   @id @default(uuid())
  title     String
  author    String
  createdAt DateTime @default(now())
}

model RadioStation {
  id    String @id @default(uuid())
  title String
  url   String
}

model SavedTrack {
  id      String @id @default(uuid())
  userId  String
  trackId String
}

